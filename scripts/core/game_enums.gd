## ゲーム全体で使用する列挙型を定義
## 仕様書: docs/units_v0.1.md, docs/map_v0.1.md, docs/combat_v0.1.md

# =============================================================================
# 陣営
# =============================================================================

enum Faction {
	NONE = 0,
	BLUE = 1,
	RED = 2,
}

# =============================================================================
# 機動種別 (Mobility Type)
# =============================================================================

enum MobilityType {
	FOOT = 0,      ## 徒歩
	WHEELED = 1,   ## 装輪
	TRACKED = 2,   ## 装軌
}

# =============================================================================
# 地形タイプ
# =============================================================================

enum TerrainType {
	OPEN = 0,    ## 基本（畑/草地）
	ROAD = 1,    ## 道路
	FOREST = 2,  ## 森林
	URBAN = 3,   ## 市街
	WATER = 4,   ## 水域
}

# =============================================================================
# ナビゲーションレイヤー
# =============================================================================

enum NavLayer {
	ALL = 1,     ## 通常移動（ビット1）
	ROUTE = 2,   ## 道路縛り（ビット2）
}

# =============================================================================
# 拠点属性
# =============================================================================

enum CPAttribute {
	COM = 0,  ## 指揮
	LOG = 1,  ## 兵站
	OBS = 2,  ## 観測
}

# =============================================================================
# ユニットカテゴリ
# =============================================================================

enum UnitCategory {
	INFANTRY = 0,   ## 歩兵
	ARMOR = 1,      ## 装甲
	RECON = 2,      ## 偵察
	SUPPORT = 3,    ## 支援
	LOGISTICS = 4,  ## 兵站
}

# =============================================================================
# Element種別
# =============================================================================

enum ElementType {
	SQUAD = 0,    ## 分隊
	TEAM = 1,     ## チーム
	SECTION = 2,  ## 班
	PLATOON = 3,  ## 小隊
	VEHICLE = 4,  ## 車両
}

# =============================================================================
# 視界状態 (Contact State)
# =============================================================================

enum ContactState {
	UNKNOWN = 0,   ## 未発見
	SUSPECTED = 1, ## 疑似（SUS）
	CONFIRMED = 2, ## 確認済み（CONF）
	LOST = 3,      ## ロスト
}

# =============================================================================
# ユニット状態
# =============================================================================

enum UnitState {
	ACTIVE = 0,      ## 戦闘可能
	SUPPRESSED = 1,  ## 制圧中
	ROUTING = 2,     ## 潰走中
	DESTROYED = 3,   ## 撃破
}

# =============================================================================
# 車両状態
# =============================================================================

enum VehicleState {
	OPERATIONAL = 0,  ## 稼働
	DAMAGED = 1,      ## 損傷
	IMMOBILIZED = 2,  ## 行動不能
	DESTROYED = 3,    ## 撃破
}

# =============================================================================
# 命令種別
# =============================================================================

enum OrderType {
	MOVE = 0,           ## 移動
	MOVE_FAST = 1,      ## 急速移動
	ATTACK_MOVE = 2,    ## 攻撃前進
	HOLD = 3,           ## 停止
	DEFEND = 4,         ## 防御
	ATTACK = 5,         ## 攻撃
	RETREAT = 6,        ## 後退
}

# =============================================================================
# SOPモード
# =============================================================================

enum SOPMode {
	HOLD_FIRE = 0,       ## 射撃禁止
	RETURN_FIRE = 1,     ## 反撃のみ
	FIRE_AT_WILL = 2,    ## 自由射撃
}

# =============================================================================
# シム速度
# =============================================================================

enum SimSpeed {
	PAUSED = 0,
	NORMAL = 1,
	FAST = 2,
	VERY_FAST = 3,
}
